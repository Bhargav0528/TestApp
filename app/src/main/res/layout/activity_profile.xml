<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhargav.testapp.ProfileActivity"
    android:background="#000000">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbar"
        android:background="@drawable/layerlist"
        >

    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/imgstar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/stars"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/starnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:text="0"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_above="@+id/scrollView2"
        android:layout_alignStart="@+id/imgstar"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="119dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgstar"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Name"
                android:textColor="#FFD740"
                android:textSize="30sp" />

            <TextView
            android:id="@+id/tvusn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USN"
            android:textColor="#FFD740"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginBottom="15dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:background="#FFD740"
            android:layout_width="0dp"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/leaderboard"
            android:src="@drawable/leaderboard"
            android:scaleType="centerInside"/>
        <ImageButton
            android:padding="3dp"
            android:background="#FFD740"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/questions"
            android:src="@drawable/questions"
            android:scaleType="centerInside"/>
        <ImageButton
            android:padding="3dp"
            android:background="#FFD740"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/profile"
            android:src="@drawable/profile"
            android:scaleType="centerInside"/>
    </LinearLayout>

</RelativeLayout>
