<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhargav.testapp.QuestionListActivity"
    android:orientation="vertical"
    android:background="#000000">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbar"
        android:background="@drawable/layerlist"
        >
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/ques1check"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/question1"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="50dp"
        android:src="@drawable/xmark"/>
    <ImageView
        android:id="@+id/ques2check"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/question2"
        android:layout_below="@+id/ques1check"
        android:layout_marginTop="130dp"
        android:src="@drawable/xmark"/>

    <ImageView
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/one"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/question1"
        android:layout_width="200dp"
        android:layout_height="120dp" />
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/question1"
        android:src="@drawable/two"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/question2"
        android:layout_width="200dp"
        android:layout_height="120dp" />



</RelativeLayout>
