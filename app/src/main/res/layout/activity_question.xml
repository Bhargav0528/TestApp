<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhargav.testapp.QuestionActivity"
    android:orientation="vertical"
    android:background="#000000">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbar"
        android:background="@drawable/layerlist"
        >

    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:id="@+id/name"
        android:textColor="#FFD740"/>

    <TextView
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/descp"
        android:textColor="#FFD740"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:id="@+id/answer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:hint="Your Answer Here"
        android:textColor="#FFD740"
        android:textColorHint="#FFD740"
        android:background="@drawable/border3"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_weight="1"
            android:background="#FFD740"
            android:text="SUBMIT"/>
        <Button
            android:background="#FFD740"
        android:id="@+id/bthint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
            android:layout_weight="1"
        android:text="Hint?" />
    </LinearLayout>

</LinearLayout>
