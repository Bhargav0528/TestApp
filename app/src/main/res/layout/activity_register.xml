<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.bhargav.testapp.Authentication.RegisterActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/newlogo"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/etregister"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:backgroundTint="#FFD740"
        android:layout_centerHorizontal="true"
        android:textColorHint="#FFD740"
        android:hint="Email"
        android:textColor="#FFD740"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:id="@+id/etregpassword"
        android:hint="Password"
        android:backgroundTint="#FFD740"
        android:layout_centerHorizontal="true"
        android:textColorHint="#FFD740"
        android:layout_below="@+id/etregister"
        android:layout_marginTop="20dp"
        android:textColor="#FFD740"/>
    <Button
        android:id="@+id/btregister"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/border"
        android:layout_alignParentBottom="true"
        android:text="Register"
        android:textSize="20sp"
        android:textColor="#000000"/>
    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="36dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:indeterminateTint="#FFD740"
        android:layout_above="@+id/btregister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />


</RelativeLayout>
